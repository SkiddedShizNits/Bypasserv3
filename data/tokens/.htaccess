# Protect tokens directory - MAXIMUM SECURITY

# Disable directory listing
Options -Indexes

# Disable PHP execution
php_flag engine off

# Block ALL access
Order Deny,Allow
Deny from all

# Block access to all files
<FilesMatch ".*">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Block access to .htaccess itself
<Files ".htaccess">
    Order Allow,Deny
    Deny from all
</Files>
