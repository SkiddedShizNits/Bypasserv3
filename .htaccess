<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Redirect root to generator
    RewriteRule ^$ generator/ [L]
    RewriteRule ^index\.php$ generator/ [L]

    # Don't rewrite existing files/directories
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Don't rewrite these paths
    RewriteCond %{REQUEST_URI} !^/generator/
    RewriteCond %{REQUEST_URI} !^/api/
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteCond %{REQUEST_URI} !^/dashboard/
    
    # Route instances
    RewriteRule ^([a-zA-Z0-9_-]+)/?$ index.php [L,QSA]
</IfModule>

# Security
<FilesMatch "(config\.php|functions\.php|composer\.(json|lock)|\.env|\.log)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

Options -Indexes

# PHP Settings
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value memory_limit 128M
    php_value max_execution_time 30
</IfModule>

# CORS Headers
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "POST, GET, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type"
</IfModule>
