# Protect data directory

# Disable directory listing
Options -Indexes

# Disable PHP execution
php_flag engine off

# Block all access to this directory
<FilesMatch ".*">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Allow JSON files to be read by PHP scripts only
<FilesMatch "\.(json)$">
    Order Allow,Deny
    Allow from 127.0.0.1
    Allow from ::1
</FilesMatch>

# Block access to .htaccess itself
<Files ".htaccess">
    Order Allow,Deny
    Deny from all
</Files>
